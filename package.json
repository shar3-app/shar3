{
  "name": "shar3",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:web": "vite",
    "build:web": "tsc && vite build",
    "build:mac": "tauri build --target aarch64-apple-darwin",
    "build:mac:intel": "tauri build --target x86_64-apple-darwin",
    "build:mac:universal": "tauri build --target universal-apple-darwin",
    "preview": "vite preview",
    "tailwind": "npx tailwindcss -i ./src/App.css -o ./src/styles.css --watch",
    "tauri": "tauri",
    "prepare": "husky install",
    "prettify": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "dependencies": {
    "@tauri-apps/api": "^1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@reecelucas/react-use-hotkeys": "^2.0.0",
    "@tauri-apps/cli": "^1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "flowbite-react": "^0.10.1",
    "husky": ">=7",
    "lint-staged": ">=10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react-joyride": "^2.9.2",
    "react-qr-code": "^2.0.15",
    "sonner": "^1.5.0",
    "tailwindcss": "^3.4.11",
    "talkr": "^3.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm run prettify"
    ]
  }
}
