{
  "build": {
    "beforeDevCommand": "pnpm dev:web",
    "beforeBuildCommand": "pnpm build:web",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Shar3",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "message": true
      },
      "window": {
        "setFocus": true
      }
    },
    "windows": [
      {
        "title": "Shar3",
        "minWidth": 440,
        "minHeight": 580,
        "width": 525,
        "height": 700,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.davru.shar3",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
